import java.util.HashSet;
import java.util.Set;

/**
 * 
 * @author Lovey custom data structure to store detail against each word
 */

public class WordDetail {

	private Set<Integer> lineNum = new HashSet<Integer>();
	private int count;

	public Set<Integer> getLineNum() {
		return this.lineNum;
	}

	public void setLineNum(int num) {
		this.lineNum.add(num);
	}

	public int getCount() {
		return this.count;
	}

	public void setCount(int count) {
		this.count = count;
	}

	public void addCount(int count) {
		this.count = this.count + count;
	}

	public String toString() {
		return "[Count: " + count + "," + "Line Number: " + lineNum + "]";
	}

}
